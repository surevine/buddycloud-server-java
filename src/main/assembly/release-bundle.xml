<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>release-bundle</id>
	<formats>
		<format>tar.gz</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>${project.basedir}/contrib</directory>
			<outputDirectory>/contrib/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/manual</directory>
			<outputDirectory>/manual/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/postgres</directory>
			<outputDirectory>/postgres</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/channelserver-jar-with-dependencies.jar</source>
		</file>
		<file>
			<source>configuration.properties.example</source>
		</file>
		<file>
			<source>log4j.properties.example</source>
		</file>
		<file>
			<source>LICENSE</source>
		</file>
	</files>
</assembly>
